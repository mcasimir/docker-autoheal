{
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "plugins": [
    "babel"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "forOf": true,
      "blockBindings": true,
      "arrowFunctions": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "generators": true,
      "restParams": true,
      "spread": true,
      "superInFunctions": true,
      "templateStrings": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "new-cap": 0,
    "no-console": [1, { "allow": ["info", "warn", "error"] }],
    "quotes": [2, "single"],
    "no-unused-vars": 2,
    "eqeqeq": 2,
    "complexity": [2, 10],
    "max-len": [2, 80],
    "no-var": 2,
    "comma-dangle": [2, "never"],
    "no-mixed-spaces-and-tabs": 2,
    "quote-props": [2, "as-needed"],
    "padded-blocks": 0,
    "require-jsdoc": 0,
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1
  }
}
