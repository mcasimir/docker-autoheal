{
  "name": "docker-autoheal",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec 'npm start'",
    "start": "LOG_FORMAT=pretty LOG_LEVEL=verbose npm run docker:run",
    "test": "mocha --compilers js:babel-register --require babel-polyfill 'test/**/*.spec.js'",
    "docker:run": "docker rm -f autoheal || npm run docker:build && docker run --name=autoheal --rm -e DEBUG='docker-autoheal:*' -v /var/run/docker.sock:/var/run/docker.sock mcasimir/docker-autoheal || docker rm -f autoheal",
    "docker:build": "docker build -t mcasimir/docker-autoheal .",
    "docker:tag": "npm run docker:build && docker tag mcasimir/docker-autoheal mcasimir/docker-autoheal:$npm_package_version && docker tag mcasimir/docker-autoheal mcasimir/docker-autoheal:latest",
    "docker:push": "npm run docker:tag && docker push mcasimir/docker-autoheal",
    "test:ci": "npm run lint && npm test",
    "lint": "eslint . --quiet"
  },
  "author": "mcasimir (https://github.com/mcasimir)",
  "license": "ISC",
  "dependencies": {
    "babel-core": "6.9.1",
    "babel-plugin-syntax-async-functions": "6.8.0",
    "babel-plugin-transform-class-properties": "6.9.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-object-assign": "6.8.0",
    "babel-plugin-transform-regenerator": "6.9.0",
    "babel-polyfill": "6.9.1",
    "babel-preset-es2015": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "bunyan": "1.8.1",
    "core-decorators": "0.12.3",
    "dockerode": "2.2.10",
    "dockerode-promise": "0.1.0",
    "dockerode-promise-es6": "1.0.0",
    "node-docker-monitor": "1.0.9",
    "winston": "2.2.0"
  },
  "devDependencies": {
    "mocha": "2.5.3",
    "nodemon": "1.9.2",
    "babel-eslint": "6.0.4",
    "eslint": "2.11.1",
    "eslint-config-google": "0.5.0",
    "eslint-plugin-babel": "3.2.0"
  }
}
